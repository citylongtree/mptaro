
body, html {
  padding: 0;
  margin: 0 auto;
  font-family: "PingFang-SC-Medium", "Microsoft YaHei" ,"Source Han Sans", "Segoe UI", "Lucida Grande", Helvetica, Arial, FreeSans, Arimo, "Droid Sans", "wenquanyi micro hei", "Hiragino Sans GB", "Hiragino Sans GB W3", sans-serif
  min-height: 100%;
  height: 100%;
  -webkit-text-size-adjust: 100%;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}
body, td, th, input {
  font: 12px/1.5 Microsoft YaHei,tahoma,arial,Hiragino Sans GB,\\5b8b\4f53,sans-serif;
}
div, ul, li, h1, h2, h3, h4, h5, h6, dl, dt, dd, p, img, input,span,i,a {
  margin: 0;
  padding: 0;
  list-style-type: none;
  -webkit-user-select: none; /* Chrome all / Safari all */
  -moz-user-select: none; /* Firefox all （移动端不需要） */
  -ms-user-select: none; /* IE 10+ */
  box-sizing: border-box;
  text-decoration: none;
}
a:-webkit-any-link{
  color: inherit;
}
a:focus , input:focus{
  outline: none;
}
img {
  border: 0;
  margin: 0;
  padding: 0;
}

.clear {
  zoom: 1;
  &:after {
    content: '';
    display: block;
    clear: both;
  }
}
.fl{
  float left
}
.fr{
  float right
}
.cover-img{
  width 100%
  height 100%
}
.text-ellipsis{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

