@import "../../styles/mixin.styl"
.cardBox{
    height 159px
    width 704px
    margin-top 33px
    background url("../../imgs/icons/card.png") no-repeat center
    background-size 100%
    .cardLeft{
        float left
        width 190px
        height 100%
        .money{
            width 162px
            height 89px
            border-bottom 3px solid #F4F1F4
            margin 0 auto
            text-align center
            font-size 47px
            font-weight 600
            line-height 130px
            color #ffffff
            letter-spacing 5px
            .code{
                font-size 33px
                font-weight 600
                letter-spacing 0
            }
        }
        .usable{
            font-size 20px
            color #fff
            margin-top 9px
            text-align center
        }
    }
    .cardCenter{
        float left
        margin-left 20px
        width 331px
        .centerTittle{
            color #FF970D
            font-size 34px
            margin-top 20px
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
        }
        .centermark{
            color#777776
            font-size 24px
            margin-top 10px
        }
        .time{
            color #777776
            font-size 26px
        }
    }
    .cardRight{
        float right
        .pic1{
            display table-cell
            vertical-align middle
            text-align center 
            .img1{
                display block
                width 123px
                height 97px
                margin-top 32px
                margin-right 17px
            }
        }
    }
}
.noOrderPic{
    height calc(100vh - 178px)
    .orderPic{
    width 394px
    height 192px
    margin-left 24vw
    text-align center
    margin-top 20vh
    }
    .title{
        text-align center
    }
}