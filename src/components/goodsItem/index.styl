.goods-Item
  width 340px
  height 523px
  display flex
  flex-direction column
  overflow hidden
  .goods-img
    width 100%
    height 353px
    background: #fff
    overflow hidden
    Image
      width 100%
      height 100%
      display block
  .goods-bottom
    flex 1
    padding 25px 10px 0
    box-sizing border-box
    .goods-name
      width 100%
      height 68px
      font-size 26px
      line-height 34px
      overflow : hidden
      text-overflow ellipsis
      display -webkit-box
      -webkit-line-clamp 2
      -webkit-box-orient vertical
    .goods-price
      font-size 26px
      font-weight bold
      line-height 67px
      color #dd3b46
.borderRadius
  border-radius 25px
  overflow hidden
