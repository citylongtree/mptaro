@import "../../../styles/mixin.styl"
Image
  display block
.goodsItem
  width 100%
  display flex
  flex-direction row
  justify-content space-between
  .search-item-img
    wh(220px,224px)
  .list-item-img
    wh(188px,191px)
  .goodsItem-right
    display flex
    flex-direction column
    justify-content space-between
    .goodsTitle
      width 100%
      line-height 37px
      color #212121
      font-size $font-size-4
    .goodsCnt
      wh(100%, 48px)
      line-height 48px
      font-size 24px
      color #B7B7B7
    .goodsItem-right-bottom
      display flex
      flex-direction row
      justify-content space-between
      .goodsPrice
        font-size $font-size-2
        color #FF7700
        font-weight bold
        line-height 54px
      .addShopCar
        display inline-block
        wh(54px, 54px)
        background url("../../../imgs/icons/shaocAR.png") no-repeat center
        background-size 100% 100%
  .search-right
    width 425px
  .list-right
    width 305px
