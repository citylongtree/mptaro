@import "../../styles/mixin.styl"
$bgUrl = $baseUrl + '/my/top-bg.png'
.my{
  height 100vh
  width 100%
  background:url($bgUrl) rgba(239,239,239,1) no-repeat top;
  background-size 750px
  &-header{
    padding  45px 0 30px 0
    &-url{
      wh(130px,130px)
      margin 0 auto
      border-radius:50%;
      background: #fff
      border 4px solid #fff
      .img{
        wh(130px,130px)
        border-radius:50%;
      }
    }
    .handle{
      margin-top 25px
      font-size:26px;
      font-weight:500;
      color:rgba(255,255,255,1);
      text-align center
    }
  }
  &-info{
    width:700px;
    margin 20px auto
    background:rgba(251,251,251,1);
    border-radius:23px;
    &-title{
      font-size:28px;
      height 80px
      color:rgba(52,52,52,1);
      font-weight:600;
      display flex
      justify-content space-between
      align-items center
      padding 0 25px
      .left{
        font-size:24px;
        font-weight:500;
        color:rgba(105,105,105,1);
      }
    }
    &-handles{
      display flex
      height 170px
      align-items center
      .item{
        flex 1
        text-align center
        .icon{
          display block
          wh(56px,56px)
          position relative
          margin 0 auto 16px auto
          .img{
            wh(56px,56px)
          }
        }
        .text{
          font-size:24px;
          font-weight:500;
          color:rgba(105,105,105,1);
        }
      }
    }
    .line{
      width:652px;
      height:2px;
      background:rgba(230,230,230,1)
      margin 0 auto
    }
  }
}
