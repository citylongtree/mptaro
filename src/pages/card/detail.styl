.card{
  height calc(100vh - 147px)
  background url('http://res.hanguda.com/uploads/group1/M00/02/02/rBDNjVwIjW2AbZvNABWgE8nn7Yk779.png') no-repeat
  background-size cover
  padding 64px 0 83px 0
  display flex
  flex-direction column
  justify-content space-between
  &-top{
    width 645px
    height 287px
    text-align center
    background url('http://res.hanguda.com/uploads/group1/M00/02/1C/rBBZuFwKMMqAIhthAABRBObgSzA596.png') no-repeat
    background-size 645px
    color:rgba(255,255,255,1);
    align-self center
    display flex
    flex-direction column
    justify-content space-between
    align-items  center
    &-title{
      font-size:38px;
      font-weight:500;
      padding-top 39px
    }
    &-money{
      font-size:86px;
     .text{
       position relative
       &:after{
         content 'ï¿¥'
         position absolute
         font-size:38px;
         bottom 15px
         left -25px
       }
     }
    }
    &-limit{
      font-size:24px;
      font-weight:500;
      color:rgba(255,222,0,1);
    }
    &-time{
      font-size:22px;
    }
  }
  &-info{
    background: #EF4900
    align-self center
    width 645px
    height calc(100vh - 444px)
    &-message{
      position relative
      height 60px
      padding 40px 0
      line-height 60px
      .text{
        display block
        width 208px
        background: #EF4900
        color #fff
        font-size:38px;
        position relative
        z-index 11
        margin 0 auto
        text-align center
      }
      .after{
        //content '',
        height 4px
        width 645px
        background: #fff
        display block
        position absolute
        top: 50%
        left 0
        margin-top -2px
        z-index 1
      }
    }
    &-notes{
      padding 0 10px
      &-item{
        font-size:28px;
        color:rgba(255,255,255,1);
        line-height 52px
      }
    }
    &-btn{
      margin 50px auto
      width 430px
      height 91px
      line-height 91px
      text-align center
      background:background url('http://res.hanguda.com/uploads/group1/M00/02/03/rBDNjVwIsfSASvWBAAAiobHHcEc009.png') no-repeat
      background-size 430px
      color #F54B01FF
      border-radius 20px
    }
  }
}
.card-info-scroll-view{
  height calc(100vh - 750px)
}
