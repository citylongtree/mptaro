@import "../../../styles/mixin.styl"
.refundPage{
    .listBox{
        height 100%
        background #fff
        font-size $font-size-5
        border-bottom 16px solid#F5F5F5
    }
    .Top{
        height 72px
        background #fff
    }
    .shopName{
        margin-left 23px
        line-height 72px
        width 315px
        height 72px
        overflow hidden
        float left
        color #303030
    }
    .orderMain{
        overflow hidden
        height 185px
        margin-bottom 10px
        .orderMainLeft{
            width 178px
            float left
            .pic{
            width 154px
            height 154px
            margin 14px 25px 17px 24px
            }
        }
        .orderMainRight{
            width 547px
            float right
            .orderMainRightT{
                height 76px
                .orderName{
                    color #212121
                    margin-top 14px
                    float left
                    font-size $font-size-4
                    overflow hidden
                    width 532px
                    text-overflow ellipsis
                    display -webkit-box
                    -webkit-line-clamp 2
                    -webkit-box-orient vertical
                }
            }
            .orderMainRightD{
                margin-top 38px
                color #A2A2A2
                .orderCnt{
                    float left
                }
                .orderMoney{
                    float right
                    margin-right 24px
                    color #FF7915
                    font-size $font-size-5
                    .Money{
                        float left
                        margin-right 10px   
                    }
                    .Number{
                        float left
                    }
                }
            }
        }
    }
    .menu{
        height 100%
        .menu1{
            height 102px
            border-bottom 1px solid #EFEFEF
            .cause{
                float left
                font-size 30px
                color #343434
                margin-left 24px
                line-height 102px
            }
            .select{
                float right
                font-size 30px
                color #919191
                line-height 102px
                margin-right 28px
            }
        }
        .menu2{
            height 150px
            border-bottom 1px solid #EFEFEF
            .money{
                font-size 30px
                color #343434
                margin-left 24px
                margin-top 40px
                .price{
                    font-size 30px
                    color #FF7915
                    margin-left -15px
                }
            }
            .freight{
                color #696969
                font-size $font-size-6
                margin-left 24px
                margin-top 19px
            }
        }
        .menu3{
            .at-input__title{
                padding-left 24px
                font-size $font-size-3
            }
        }
    }
    .submit{
        width 600px
        height 85px
        margin-top 124px
        margin-left 75px
        button{
            background #ED6C00
            color #ffffff
            border-radius 20px
        }
    }
    .pop-up{
        .at-action-sheet-body{
            text-align left
        }
        .at-action-sheet-header{
            color #343434
            font-size 34px
        }
        .at-action-sheet-footer{
            background #FF7900
            border-top 0
            color #ffffff
            font-size 30px
        }
    }
}